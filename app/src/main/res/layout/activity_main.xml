<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Without ids"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <pl.marcin.androidviewstate.CustomSwitchViewNoId
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <pl.marcin.androidviewstate.CustomSwitchViewNoId
            android:id="@+id/switch2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <pl.marcin.androidviewstate.CustomSwitchViewNoId
            android:id="@+id/switch3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With ids"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />

        <pl.marcin.androidviewstate.CustomSwitchView
            android:id="@+id/switch4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <pl.marcin.androidviewstate.CustomSwitchView
            android:id="@+id/switch5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <pl.marcin.androidviewstate.CustomSwitchView
            android:id="@+id/switch6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Handle child state by hand"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />

        <pl.marcin.androidviewstate.CustomSwitchViewHandleState
            android:id="@+id/switch7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <pl.marcin.androidviewstate.CustomSwitchViewHandleState
            android:id="@+id/switch8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <pl.marcin.androidviewstate.CustomSwitchViewHandleState
            android:id="@+id/switch9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Handle child state using BaseSavedState"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />

        <pl.marcin.androidviewstate.CustomSwitchViewHandleStateSavedState
            android:id="@+id/switch10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <pl.marcin.androidviewstate.CustomSwitchViewHandleStateSavedState
            android:id="@+id/switch11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <pl.marcin.androidviewstate.CustomSwitchViewHandleStateSavedState
            android:id="@+id/switch12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
